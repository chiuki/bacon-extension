{
  "name": "Bacon",
  "description": "Replace capitalized words with Bacon on Twitter",
  "version": "1.0.0",
  "permissions": [
    "tabs", "http://twitter.com/*", "https://twitter.com/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_title": "Bacon",
    "default_icon": "bacon.png"
  },
  "icons": {
    "48": "bacon_48.png",
    "128": "bacon_128.png"
  },
  "manifest_version": 2
}
